/* pages/chat/chat.wxss */

page {
  padding-top: constant(safe-area-inset-top);
  padding-left: constant(safe-area-inset-left);
  padding-right: constant(safe-area-inset-right);
  padding-bottom: constant(safe-area-inset-bottom);
}

.mst-focus-content {
  background-color: #f6f6f6;
  padding: 10rpx 0;
  display: flex;
  align-items: center;
  width: 100%;
}

.mst-focus-left__block {
  flex: 1;
}

.van-focus__icon {
  margin-top: 8px;
  padding: 0 10px;
}

.mst-chatroom-container {
  height: calc(100vh - 68px);
  background-color: #ededed;
}

.mst-chatroom-bottom {
  height: 68px;
  display: flex;
  align-items: center;
  background-color: #f6f6f6;
  justify-content: center;
}

.mst-chatroom-input {
  flex: 1;
  margin: 10px 8px;
  border-radius: 8rpx;
  overflow: hidden;
}

.van-field__icon-root {
  display: -webkit-flex;
  display: flex;
  height: 24px;
  -webkit-align-items: center;
  align-items: center;
  margin-right: 10px;
}

.mst-block-cell__title {
  margin: 0;
  padding: 35px 15px 15px;
  color: rgba(69, 90, 100, 0.6);
  font-weight: normal;
  font-size: 14px;
}

.mst-block-cell__group {
  padding: 10px 15px;
  display: flex;
  align-items: center;
  background-color: #fff;
}

.mst-cell {
  flex: none !important;
}

.mst-useravatar {
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.mst-dashed-round {
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
  border: 1px dashed #eee;
  background-color: #fff;
  line-height: 84rpx;
  text-align: center;
  padding: 0;
  margin: 0;
}

.mst-dashed-round::after {
  visibility: hidden;
}

.right {
  width: 100%;
  height: 100%;
  background-color: #f1f2f3 !important;
}

.mst-dashboard-btn__fixed {
  background-color: #ededed;
  color: #fff;
  line-height: 48px;
  height: 48px;
}

.mst-switch-cell {
  padding-top: 9px;
  padding-bottom: 9px;
  align-items: center;
}

.mst-switch-cell__switch {
  vertical-align: middle;
}

.mst-setting-box{
  height: calc(100vh - 68px);
}
